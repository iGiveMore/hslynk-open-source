<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>hmis-notification-service</display-name>
  
  <servlet>
    <servlet-name>hmis-notification-service</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <!-- we'll use AnnotationConfigWebApplicationContext instead of the default XmlWebApplicationContext... -->
    <init-param>
      <param-name>contextClass</param-name>
      <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
    </init-param>

    <!-- ... and tell it which class contains the configuration -->
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>com.servinglynk.hmis.warehouse.notification.config.NotificationConfig</param-value>
    </init-param>

    <load-on-startup>1</load-on-startup>

  </servlet>

  <servlet-mapping>
    <servlet-name>hmis-notification-service</servlet-name>
    <url-pattern>/endpoint/*</url-pattern>
  </servlet-mapping>
  
  
</web-app>
